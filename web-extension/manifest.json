{
  "manifest_version": 3,
  "name": "WebAiBridge",
  "version": "6.0.0",
  "description": "Bridge VS Code context to AI chat sites like ChatGPT, Claude, Gemini, and more",
  "permissions": ["scripting","activeTab","storage","tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "WebAiBridge"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/tokenizer.js", "src/content.js"],
      "run_at": "document_start"
    }
  ]
}
